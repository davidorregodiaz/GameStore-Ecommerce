<div class="container table-container">
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">Video Games Store Inventory Management</h1>
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="Upsert">
                <i class="bi bi-plus-circle me-2"></i>Add New Game
            </a>
        </div>
    </div>
    <table id="gamesTable" class="table table-striped table-hover table-bordered">
        <thead>
        <th>Name</th>
        <th>Stock</th>
        <th>Release Date</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Actions</th>
        </thead>
        <tbody class="videogame-table-body"></tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/videogames.js"></script>
}