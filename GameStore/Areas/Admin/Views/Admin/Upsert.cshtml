@model VideoGameVm


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white p-4">
                    <h3 class="mb-0">Video Game Information</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <input hidden asp-for="@Model.VideoGame.VideoGameId"/>
                        <input type="text" asp-for="VideoGame.ImageUrl" hidden>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="gameName" required maxlength="100" asp-for="@Model.VideoGame.Name">
                                    <label asp-for="@Model.VideoGame.Name"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="developer" required maxlength="100" asp-for="@Model.VideoGame.Desarrollador">
                                    <label asp-for="@Model.VideoGame.Desarrollador"></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" id="description" style="height: 100px" maxlength="500" asp-for="@Model.VideoGame.Description"></textarea>
                                    <label asp-for="@Model.VideoGame.Description"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="date" class="form-control" id="releaseDate" required asp-for="@Model.VideoGame.ReleaseDate">
                                    <label asp-for="@Model.VideoGame.ReleaseDate"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select class="form-select" id="genre" asp-items="@Model.Genres" asp-for="VideoGame.GenreId">
                                        <option>Select Genre</option>
                                    </select>
                                    <label asp-for="@Model.VideoGame.GenreId"></label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="stock" required min="0" asp-for="@Model.VideoGame.Stock">
                                    <label asp-for="@Model.VideoGame.Stock"></label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="price" required min="0" step="0.01" asp-for="@Model.VideoGame.Price">
                                    <label asp-for="@Model.VideoGame.Price"></label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="@Model.VideoGame.ImageUrl" class="form-label"></label>
                                <input type="file" name="file" class="form-control" id="formFile" value="">
                            </div>
                            <div class="col-12 d-grid gap-2 d-md-flex justify-content-md-end">
                                <button id="liveToastBtn" type="submit" class="btn btn-primary btn-lg px-4">@(@Model.VideoGame.VideoGameId!=0?"Edit":"Save")</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        @if(@Model.VideoGame.VideoGameId != 0)
        {
            <div class="game-img-container col-lg-4" style="height: 400px">
                <img src="@Model.VideoGame.ImageUrl" class="object-fit-cover" width="100%" height="100%">
            </div>
        }
    </div>
    
</div>

