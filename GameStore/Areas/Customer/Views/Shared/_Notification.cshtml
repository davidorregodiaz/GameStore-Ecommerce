
@if (TempData["Success"] != null)
{
    <div class="toast-container position-fixed top-0 right-0 p-3">
        <div id="liveToast" class="toast show fade-in" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src=@TempData["ImageUrl"] class="rounded me-2" alt="..." width="16px" height="16px">
                <strong class="me-auto">@TempData["GameName"]</strong>
                <small>Right Now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Success"]
            </div>
        </div>
    </div>
}


@section Scripts
{
    <script src="js/site.js"></script>
}





